{
  "name": "react-mailto.js",
  "version": "2.2.0",
  "description": "React MailTo component for easy creation fully configured mailto links",
  "main": "dist/index.js",
  "main:src": "src/index.tsx",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./.storybook/.cache && rm -rf ./coverage",
    "clean:all": "rm -rf ./node_modules && npm run clean",
    "prepare": "rm -rf ./dist && mkdir dist && npm run build && npm run build:tsc",
    "build": "babel ./src/* --out-dir ./dist --extensions '.ts,.tsx'",
    "build:tsc": "tsc --declaration --emitDeclarationOnly",
    "test": "NODE_ENV=test jest --testRegex=\".test.(j|t)sx?$\" --config=./jest.config.json",
    "test:watch": "npm test -- --watch",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devlio-team/react-mailto.js.git"
  },
  "keywords": [
    "react",
    "react-component",
    "email",
    "mailto"
  ],
  "author": {
    "name": "Vasyl Zubach",
    "email": "i@tjrus.com",
    "url": "http://tjrus.com"
  },
  "engines": {
    "node": ">=4"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devlio-team/react-mailto.js/issues"
  },
  "homepage": "https://github.com/devlio-team/react-mailto.js#readme",
  "peerDependencies": {
    "react": "0.14.0 || 15.x || 16.x",
    "@babel/runtime": "7.x"
  },
  "dependencies": {
    "window-or-global": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/react": "^5.3.18",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.1",
    "@types/react": "16.9.34",
    "@types/systemjs": "^6.1.0",
    "@types/window-or-global": "^1.0.1",
    "babel-loader": "^8.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^26.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.8.3"
  }
}
